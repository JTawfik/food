            <hr class="my-4">
            <p class="mb-5"><h2>If you have any questions feel free to contact us</h2></p>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4 ml-auto text-center">
            <i class="fas fa-phone fa-3x mb-3 sr-contact-1"></i>
            <p>+31(0)123456789</p>
          </div>
          <div class="col-lg-4 mr-auto text-center">
            <i class="fas fa-envelope fa-3x mb-3 sr-contact-2"></i>
            <p>
              <a href="mailto:your-email@your-domain.com">info@foodstop.nl</a>
            </p> 
          </div>
        </div>
      </div>
    </section>

