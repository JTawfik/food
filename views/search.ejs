<!-- FOOD STOP logo -->

    <header class="masthead text-center text-white d-flex">
      <div class="container my-auto">
        <div class="row">
          <div class="col-lg-10 mx-auto">

              <img class="hvr-bounce-in" src="../img/welcome.svg">

          </div>

<!-- Stop food waste join our platform -->

          <div class="col-lg-8 mx-auto">
            <p class="text-faded mb-5"></p>
            <a class="js-scroll-trigger" href="#about">
            <img src="../img/Scrolldown.svg" class="hvr-bounce-in">
          </a>
          </div>
        </div>
      </div>
    </header>

<!-- Scroll down  -->

<!-- Welcome -->
    
    <section class="bg-primary" id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto text-center">
  
            <form action="/search" method="POST"></form>
             <div class="text-white">
<p><h2>Welcome <%= user.username %></h2></p>
          <hr class="light my-4">
            <p class="text-faded mb-4">

<% if (user) {%>

<h3>Here your personal informations :</h3>

<p>Email: <%= user.email %></p>
<p>Adress: <%= user.adress %></p>
<p>Telephonenumber: <%= user.phone %></p>
<% } %>

              </div>
            <a class="btn btn-light btn-xl js-scroll-trigger" href="#" data-toggle="modal" data-target="#modalSearch">Search donation(s)</a>
          </div>
        </div>
      </div>
    </section>


<!-- Search -->   <!-- Modal -->

<div class="modal fade" id="modalSearch" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Search food donation
</h5>
        <button type="button" class="close" data-dismiss="login" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      
     <form action="/donatefood" method="POST">



<form action=“/searchfood” method=“POST”>
  <input class="form-control" type=“text” name=“name” value=“” placeholder=“name" of the food”><br>
  <input class="form-control" type=“submit” name=“Submit” placeholder="">
</form>

      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" name="Submit" type="button" class="btn btn-primary">Donate</button>
      </div>
    </div>
  </div>
</div>

    <section id="contact">
